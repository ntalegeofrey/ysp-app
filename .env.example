# Root .env for backend (Spring Boot reads via spring-dotenv)
# Copy to .env at repo root and fill values

# Database
DB_URL=jdbc:postgresql://localhost:5432/ysp_platform
DB_USERNAME=
DB_PASSWORD=

# JWT
JWT_SECRET=
JWT_TTL_SECONDS=3600

# Admin bootstrap (optional)
ADMIN_EMAIL=
ADMIN_PASSWORD=

# CORS
CORS_ORIGIN=http://localhost:3000

# SMTP (MailHog defaults for local dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTH=false
SMTP_STARTTLS=false
FROM_EMAIL=dev@ysp.local

# Branding
APP_LOGO_URL=

# Contabo S3 Object Storage
S3_ENDPOINT=https://usc1.contabostorage.com
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=ysp-app
S3_PUBLIC_URL=https://usc1.contabostorage.com/ysp-app
